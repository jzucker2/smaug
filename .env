POSTGRES_EXTERNAL_PORT=5432
POSTGRES_DEFAULT_DB=home_assistant
POSTGRES_USER=foo
POSTGRES_PASSWORD=bar

POSTGRES_EXPORTER_TAG=v0.15.0
